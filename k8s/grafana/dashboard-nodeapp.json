{
  "dashboard": {
    "title": "DevOps Lab - Node App Metrics",
    "tags": ["nodejs", "devops-lab"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "graph",
        "title": "CPU Usage",
        "targets": [
          {
            "expr": "rate(process_cpu_user_seconds_total{job=\"node-app\"}[1m])",
            "legendFormat": "{{kubernetes_pod_name}} - User CPU",
            "refId": "A"
          },
          {
            "expr": "rate(process_cpu_system_seconds_total{job=\"node-app\"}[1m])",
            "legendFormat": "{{kubernetes_pod_name}} - System CPU",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "label": "CPU Usage"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "graph",
        "title": "Memory Usage",
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"node-app\"}",
            "legendFormat": "{{kubernetes_pod_name}} - Resident Memory",
            "refId": "A"
          },
          {
            "expr": "nodejs_heap_size_used_bytes{job=\"node-app\"}",
            "legendFormat": "{{kubernetes_pod_name}} - Heap Used",
            "refId": "B"
          },
          {
            "expr": "nodejs_heap_size_total_bytes{job=\"node-app\"}",
            "legendFormat": "{{kubernetes_pod_name}} - Heap Total",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Memory"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "type": "graph",
        "title": "HTTP Requests",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"node-app\"}[1m])",
            "legendFormat": "{{kubernetes_pod_name}} - {{method}} {{route}} ({{status}})",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "type": "graph",
        "title": "Event Loop Lag",
        "targets": [
          {
            "expr": "nodejs_eventloop_lag_seconds{job=\"node-app\"}",
            "legendFormat": "{{kubernetes_pod_name}} - Event Loop Lag",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Lag (seconds)"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 16},
        "type": "singlestat",
        "title": "Uptime",
        "targets": [
          {
            "expr": "process_uptime_seconds{job=\"node-app\"}",
            "refId": "A"
          }
        ],
        "format": "s",
        "valueName": "current"
      },
      {
        "id": 6,
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 16},
        "type": "singlestat",
        "title": "Active Pods",
        "targets": [
          {
            "expr": "count(up{job=\"node-app\"} == 1)",
            "refId": "A"
          }
        ],
        "valueName": "current"
      },
      {
        "id": 7,
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 16},
        "type": "singlestat",
        "title": "Total Requests",
        "targets": [
          {
            "expr": "sum(http_requests_total{job=\"node-app\"})",
            "refId": "A"
          }
        ],
        "valueName": "current"
      }
    ]
  }
}
